<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_bg_grad" >

    <Spinner
        android:id="@+id/dayDropDownList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Spinner
        android:id="@+id/favSpotDropDownList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dayDropDownList"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:id="@+id/textStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/favSpotDropDownList"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="Enter Start Time"
        android:inputType="time" >
		<requestFocus />
    </EditText>

    <EditText
        android:id="@+id/textEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textStartTime"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:hint="Enter End Time"
        android:ems="10"
        android:inputType="time" />

    <Button
        android:id="@+id/buttonStartTime"
        style="@style/NiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textStartTime"
        android:layout_alignParentRight="true"
        android:text="@string/buttonStartTime" />

    <Button
        android:id="@+id/buttonEndTime"
        style="@style/NiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textEndTime"
        android:layout_alignParentRight="true"
        android:text="@string/buttonEndTime" />

    <Button
        android:id="@+id/buttonSave"
        style="@style/NiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textEndTime"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="26dp"
        android:text="@string/buttonSave" />

    <Button
        android:id="@+id/buttonUpdate"
        style="@style/NiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonSave"
        android:layout_alignBottom="@+id/buttonSave"
        android:layout_alignRight="@+id/textEndTime"
        android:text="@string/buttonUpdate" />

    <EditText
        android:id="@+id/textNumberOfSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textEndTime"
        android:layout_below="@+id/textEndTime"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:hint="Enter Number of Seats"
        android:ems="10" 
        android:inputType="number">

        
    </EditText>

</RelativeLayout>