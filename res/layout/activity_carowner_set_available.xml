<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_bg_grad" >

    <Spinner
        android:id="@+id/dayDropDownList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <Spinner
        android:id="@+id/favSpotDropDownList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dayDropDownList"
        android:layout_marginBottom="30dp" />

    <EditText
        android:id="@+id/textStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/favSpotDropDownList"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="time" >
    </EditText>

    <EditText
        android:id="@+id/textEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textStartTime"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="time" />

    <Button
        android:id="@+id/buttonSave"
        style="@style/NiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEndTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/buttonEndTime"
        style="@style/NiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textEndTime"
        android:layout_alignLeft="@+id/buttonStartTime" />

    <Button
        android:id="@+id/buttonStartTime"
        style="@style/NiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textStartTime"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />

</RelativeLayout>