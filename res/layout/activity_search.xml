    <Button
        android:id="@+id/buttonSearch"
        style="@style/NiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp"
        android:text="@string/buttonSearch"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/favDestDropDownList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <EditText
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/favDestDropDownList"
        android:layout_marginTop="43dp"
        android:ems="8"
        android:hint="@string/textDateHint"
        android:inputType="date" />

    <Button
        android:id="@+id/buttonTime"
        style="@style/NiceButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textTime"
        android:layout_alignParentRight="true"
        android:text="@string/buttonTime"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/buttonDate"
        style="@style/NiceButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textDate"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:text="@string/buttonDate"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSearch"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="59dp"
        android:ems="8"
        android:hint="@string/textTimeHint" />

</RelativeLayout>